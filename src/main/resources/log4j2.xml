<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%style{[%d{MM/dd/yyyy HH:mm:ss}]}{magenta} %style{[%logger/%M]}{cyan} %highlight{(%level)}: %msg\n" disableAnsi="false" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>